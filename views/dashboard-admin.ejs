<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
    <title>Admin Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet" />
    <link href="/css/style.css" rel="stylesheet" />
  </head>

  <body class="dark-theme">
    <% const employeesList = typeof employees !== 'undefined' ? employees : [];
    %> <%- include('partials/navbar'); %>

    <div class="container py-5">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-gradient">Admin Dashboard</h2>
        <button class="btn btn-outline-light" id="themeToggle">🌓</button>
      </div>

      <!-- Welcome card -->
      <div class="card glass-card p-4 mb-5">
        <h4>Welcome, <%= user.name %> 👋</h4>
        <p class="">You have full control over all employees and tasks.</p>
        <div class="d-flex gap-3 mt-3">
          <a href="/tasks" class="btn btn-primary">📋 View All Tasks</a>
          <a href="/register" class="btn btn-outline-light"
            >➕ Add New Employee</a
          >
        </div>
      </div>

      <!-- Employee Management -->
      <div class="card glass-card p-4">
        <h5 class="mb-3">Manage Employees</h5>
        <div class="table-responsive">
          <table class="table table-dark table-hover align-middle mb-0">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody id="employeeTable">
              <% employeesList.forEach((emp, index) => { %>
              <tr data-id="<%= emp._id %>">
                <td><%= index + 1 %></td>
                <td><%= emp.name %></td>
                <td><%= emp.email %></td>
                <td><%= emp.role %></td>
                <td>
                  <button class="btn btn-sm btn-outline-danger deleteEmp">
                    🗑️ Terminate
                  </button>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Toast -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
      <div id="toastMsg" class="toast text-bg-success border-0">
        <div class="d-flex">
          <div class="toast-body"></div>
          <button
            type="button"
            class="btn-close btn-close-white me-2 m-auto"
            data-bs-dismiss="toast"></button>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/dashboard.js"></script>
  </body>
</html>
